<h3>New Game</h3>
<div class="d-flex p-2 justify-content-center align-self-center">
  <%@letters.each do|letter|%>
  <p class="me-5 p-3 border border-primary" ><%=letter%></p>
  <% end %>
</div>
<form action="/score" method="post" data-turbo="false">
<div class="col-auto">
    <input type="text" class="form-control"  placeholder="Type your word here" name="word">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">submit</button>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
